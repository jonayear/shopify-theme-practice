<div class="container-fluid my-2">
	<h1 class="text-center">{{ section.settings.title }}</h1>
	<div class="row">
	   {% for product in section.settings.featured_collection.products limit:section.settings.number_of_product_show %}
	    <div class="col-md-3">
	    	 {% render 'product-card', product:product %}
	    </div>
	     {% else %}
	     {% for item in (1..4) %}
		     <div class="col-md-3">
		     	 {% render 'product-placeholder-card', product:product %}
		     </div>
	     {% endfor %}
	   {% endfor %}	
	</div>
</div>
{% schema %}
{
	"name":"featured collection",
	"settings":[
	    {
	    	"type":"text",
	    	"id":"title",
	    	"label":"Title",
	    	"default":"Featured Collection"
	    },
	    {
	    	"type":"collection",
	    	"id":"featured_collection",
	    	"label":"collection"
	    },
	    {
     	"type":"range",
     	"id":"number_of_product_show",
     	"min":4,
     	"max":12,
     	"default":4,
     	"label":"number of product show"
     }
	],
	"presets":[
	  {
	  	"name":"featured collection"
	  }
	]
}
{% endschema %}