<div class="container">
	<a class="text-center my-2" href="{{ routes.collection_url }}">Go Bact To Collection Page</a>
	{% paginate collection.products by section.settings.per_page_product_show %}
	   <div class="row">
	   	{% for product in collection.products %}
	   	  <div class="col-md-4">
	   	  	{% render 'product-card',product:product %}
	   	  </div>
	   	  {% else %}
	   		<p class="text-center">Their is no Product</p>
	   	{% endfor %}
	   </div>
	   <div class="my-2">
	   	{% render 'pagination',pagination:paginate %}
	   </div>
	   
	{% endpaginate %}
</div>
{% schema %}
{
	"name":"template collection",
	"settings":[
	   {
	   	"type":"number",
	   	"id":"per_page_product_show",
	   	"label":"Per Page product",
	   	"default":6
	   }
	]
}
{% endschema %}