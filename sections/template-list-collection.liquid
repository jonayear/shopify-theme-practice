<div class="container my-2" >
	<h3 class="text-center">{{ section.settings.title }}</h3>
	<div class="row">
		{% for collection in collections %}
		   {% if collection.all_products_count > 0 %}
		   	  <div class="col-md-4 my-2">
				<div class="card" style="width: 18rem;">
					<a href="{{ collection.url }}">
						{% if collection.featured_image != blank %}
						  {%  assign collection_image = collection.featured_image %}
						{% else %}
						   {%  assign collection_image = collection.products.first.image %}
						{% endif %}
						<img src="{{ collection_image | img_url:'medium' }}" class="card-img-top" alt="{{ collection.title | escape }}">
					</a>
				  <div class="card-body">
				    <h5 class="card-title"> {{collection.title}} </h5>
				  </div>
				</div>
		   	  </div>
		   {% endif %}
		{% endfor %} 
	</div>
</div>
{% schema %}
{
	"name":"template Colection",
	"settings":[
	   {
	   	"type":"text",
	   	"id":"title",
	   	"label":"Title",
	   	"default":"Collections"
	   }
	]
}
{% endschema %}
